<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/dateTimeline_healthTaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toTopOf="parent"
        app:textColorNormal="@color/black"
        app:textColorSelected="#3448B8"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/datePickerTxtView_healthTaker"
        android:layout_width="178dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:text="@string/medicineTxtView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTimeline_healthTaker" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome_healthTaker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_39sdp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datePickerTxtView_healthTaker" />


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAddMed_healthTaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_39sdp"
        app:fabSize="mini"
        app:fab_icon="@drawable/ic_addmedicine"
        app:fab_title="addMed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

