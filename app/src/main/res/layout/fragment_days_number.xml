<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightblue"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:backgroundTint="@null"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    tools:context=".DaysNumberFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@color/cardwhite"
            android:orientation="vertical"
            app:backgroundTint="@null">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Do you need to take this med every day?"
                android:textColor="@color/lightblue"
                android:textSize="18dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/onceDaily"
                android:layout_width="125dp"
                android:layout_height="42dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Once daily"
                android:textColor="#000000"
            />

            <View
                android:id="@+id/view"
                android:layout_width="326dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/lightblue" />

            <Button
                android:id="@+id/threeTimesAday"
                android:layout_width="146dp"
                android:layout_height="44dp"
                android:layout_marginEnd="228dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="3 times Daily"
                android:textColor="#000000" />

            <View
                android:id="@+id/viewe"
                android:layout_width="326dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/lightblue" />

            <Button
                android:id="@+id/twiceDaily"
                android:layout_width="132dp"
                android:layout_height="39dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Twice daily"
                android:textColor="#000000" />

            <View
                android:id="@+id/vieww"
                android:layout_width="326dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/lightblue" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>