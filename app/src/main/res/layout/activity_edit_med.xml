                                    android:src="@drawable/ic_medicine5"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
